<UserControl
	x:Class="Automator.DeviceEmulator.ColorPicker"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Background="#10101010" MouseLeftButtonDown="OnPickDown">
        <Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Rectangle x:Name="_rect" MinWidth="32" MinHeight="16" Margin="5"/>
		<TextBlock x:Name="_textBlock" Text="Pick" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
	</Grid>
</UserControl>
